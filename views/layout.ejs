<!DOCTYPE html>
<html>
  <head>
    <title>The Universe</title>

    <link rel="icon" type="image/png" href="/images/logo.png">

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel='stylesheet' href='/css/index.css' />

    <script src="/js/jquery-2.2.3.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
  </head>

  <body>

    <header>
      <img src="/images/logo.png" class="logo">

      <% if(user) { %>
        <a href="<%= routing.generate(routes.dashboard) %>" class="btn">Dashboard</a>
        <a href="<%= routing.generate(routes.browse) %>"    class="btn">Browse</a>
        <a href="<%= routing.generate(routes.upload) %>"    class="btn">Upload</a>
        <% if(user.isAdmin()) { %>
          <a href="<%= routing.generate(routes.admin.home) %>"   class="btn">Admin</a>
        <% } %>
        <a href="<%= routing.generate(routes.logout) %>"    class="btn">Logout</a>
      <% } else { %>
        <a href="<%= routing.generate(routes.login) %>"    class="btn">Login</a>
        <a href="<%= routing.generate(routes.register) %>" class="btn">Register</a>
      <% } %>
    </header>

    <%- messages() %>

    <div class="body-wrapper">
      <%- body %>
    </div>

    <footer></footer>

  </body>
</html>
